mkdir -p /usr/lib/gridengine
mount -t nfs 192.168.2.35:/usr/lib/gridengine /usr/lib/gridengine
DEBIAN_FRONTEND='noninteractive' apt-get -y install gridengine-exec 
sed  -i 's/none/'$DOMAIN'/' /etc/gridengine/bootstrap




